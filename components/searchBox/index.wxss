.input-box{
  width: 90vw;
  height: 6.5vh;
  box-sizing: border-box;
  border: 5rpx solid #fff;
  border-radius: 15rpx;
  margin: 70rpx auto;
  padding: 10rpx 30rpx;
  display: flex;
  align-items: center;
  position: relative;
}
.input-box .dropdown{
  display: flex;
  height: 100%;
  align-items: center;
  color: #fff;
  margin-right: 20rpx;
}
.input-box .dropdown .ddList{
  color: rgb(133, 133, 133);
  background-color: #fff;
  padding: 10rpx 0;
  border-radius: 10rpx;
  position:absolute;
  left: 0;
  top: 6.7vh;
  box-shadow: 0 0 15rpx rgb(233, 233, 233);
  z-index: 1;
}
.input-box .dropdown .ddList .ddList-item{
  padding: 15rpx 40rpx;
}
.input-box .dropdown .ddList .hover{
  background-color: #f6f4f8;
  color:rgb(145, 29, 180);
}
.input-box .input{
  flex: 1;
  margin-right: 10rpx;
  color: #fff;
}
