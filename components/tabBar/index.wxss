.tabbar{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding-bottom: 20rpx;
  background-color: #fff;
  display: flex;
  z-index: 99;
  box-shadow: 0 -3rpx 10rpx rgb(226, 226, 226);
}

.tabbar .tab-btn{
  /* flex: 20%; */
  width: 25vw;
  font-size: 20rpx;
  display: flex;
  color: #979797;
  font-weight: 500;
  background-color: #fff;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.tabbar .theme_blue{
  color: #5a0997;
}
.tabbar .tab-image{
  height: 50rpx;
  width: 50rpx;
  margin-bottom: 10rpx;
}
.active{
  color: #5a0997;
}