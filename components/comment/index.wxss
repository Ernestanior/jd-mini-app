.comment-container{
  padding: 30rpx 0;
  box-sizing: border-box;
}
.comment-container .total{
  color: #888;
  font-size: 30rpx;
}
.comment-container .comment-input{
  background-color: #eeeeee;
  width: 80vw;
  border-radius: 30rpx;
  margin: 30rpx 0;
  padding: 10rpx 25rpx 10rpx 25rpx;
}
.comment-container .user-avatar{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  /* overflow: hidden; */
  background-color: #fff;
  margin-right: 30rpx;
}
.comment-container .comment-box{
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
} 
.comment-container .comment-content{
  flex: 1;
}
.comment-container .comment-content .name{
  color: #999;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.comment-container .comment-content .content{
  color: #000;
  font-size: 26rpx;
}
.comment-container .comment-reply{
  display: inline-block;
}
.comment-container.comment-reply span{
  font-size: 24rpx;
  color:#000;
}
.like{
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #888;
}
.like image{
  width: 30rpx;
  height: 30rpx;
  margin-bottom: 7rpx;
}