.comment-container{
  padding: 30rpx 0;
  box-sizing: border-box;
}
.comment-container .total{
  color: #888;
  font-size: 30rpx;
}
.comment-container .comment-input{
  background-color: #eeeeee;
  width: 80vw;
  border-radius: 30rpx;
  margin: 30rpx 0;
  padding: 10rpx 25rpx 10rpx 25rpx;
}
.comment-box{
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
  padding: 30rpx 0;
} 
.sub-comment-box{
  display: flex;
  justify-content: space-between;
  padding-top: 20rpx;
} 
.user-avatar{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  /* overflow: hidden; */
  background-color: #fff;
  margin-right: 30rpx;
}

.comment-content{
  flex: 1;
}
.comment-content .name{
  color: #999;
  font-size: 25rpx;
  margin-bottom: 10rpx;
}
.comment-content .content{
  color: #000;
  font-size: 28rpx;
  display: flex;
  flex-wrap: wrap;
  text-overflow: clip;
  width: 70vw;
  word-wrap:break-word;
  word-break:break-all;
}
.comment-content .sub-content{
  color: #000;
  font-size: 28rpx;
  display: flex;
  flex-wrap: wrap;
  text-overflow: clip;
  width: 62vw;
  word-wrap:break-word;
  word-break:break-all;
}
.comment-reply{
  margin-top: 30rpx;
  display: inline-block;
  font-size: 26rpx;
  color:#264588
}
.like{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 5rpx;
  font-size: 25rpx;
  color: #888;
}
.like image{
  width: 30rpx;
  height: 30rpx;
  margin-bottom: 5rpx;
}
.end-comment{
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  font-size: 20rpx;
  color:#aaa
}
.scroll-view{
  max-height: 1300rpx;
}