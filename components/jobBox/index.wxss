.job-box{
  box-shadow: 0 0 10px 0 #eee, 0 0 15px 0 #eee;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 40rpx;
  margin-top: 20rpx;
}
.job-box .role{
  font-weight: 500;
  margin-right: 15rpx;

}
.job-box .item-title{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 10rpx;
}

.job-box .salaryRange{
  font-size: 25rpx;
  font-weight: 500;
  color: rgb(255, 137, 58);
}
.job-box .type{
  padding: 4rpx 12rpx;
  background-color: rgb(97, 10, 148);
  font-size: 21rpx;
  color: #eee;
  border-radius: 18rpx;
}
.job-box .condition{
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 10rpx;
}
.job-box .tags{
  font-size: 25rpx;
  padding: 8rpx 14rpx;
  background-color: rgb(240, 240, 240);
  color: rgb(109, 109, 109);
  margin: 15rpx 10rpx 0 0;
  border-radius: 15rpx;
}
.job-box .company{
  border-top: 1px solid rgb(230, 230, 230);
  display: flex;
  align-items: center;
  color: rgb(131, 131, 131);
  padding-top: 15rpx;
}
.job-box .companyIcon{
  width: 40rpx;
  margin-right: 16rpx;
}
.job-box .companyName{
  margin-right: 20rpx;
  font-size: 25rpx;
}
.job-box .address{
  position: relative;
  padding-top: 15rpx;
  display: flex;
  flex-wrap: wrap;
  font-size: 25rpx;
  align-items: center;
  justify-content: space-between;
  color: rgb(131, 131, 131);
}
.job-box .address .city{
  font-size: 25rpx;
  color: rgb(131, 131, 131);
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.job-box .address .city .add-icon{
  width: 40rpx;
  height: 40rpx;
}
.job-box .dateTime{
  margin-top: 1vh;
  color: rgb(160, 160, 160);
  font-size: 25rpx;
}
