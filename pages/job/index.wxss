.job-search{
  width: 100vw;
  /* background: url(https://s4.ax1x.com/2022/01/22/7hTDqP.png) no-repeat 0 -70rpx;
  background-size: contain; */
}
.bg{
  background-color: #8d64fd;
  z-index: -1;
  width: 100%;
  height: 460rpx;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}
.job-search .job-title{
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 50rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  margin-top: 10rpx;
}
.job-search .job-title .job-title-desc{
  margin-top: 10rpx;
  font-size: 26rpx;
  font-weight: 400;
  letter-spacing: 1rpx;
}
.job-search .job-content{
  padding: 30rpx;
}
.job-search .job-content .job-content-title{
  text-align: center;
  color:#8856ff;
  margin-bottom: 30rpx;
}
.job-search .job-content .job-content-img{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.job-search .job-content .job-content-img image{
  width: 330rpx;
  margin-bottom: 30rpx;
}