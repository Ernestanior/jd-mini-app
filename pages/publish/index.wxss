.publish-container{
  margin-top: 170rpx;
  padding: 30rpx;
}
.publish-container .photo-list{
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
}
.publish-container .photo-list .photo{
  margin: 15rpx;
  position: relative;
}
.publish-container .photo-list .photo .minus{
  position: absolute;
  right: -15rpx;
  top: -15rpx;
  height: 30rpx;
  width: 30rpx;
  background-color: #fff;
  border-radius: 50%;
}
.publish-container image{
  width: 200rpx;
  height: 200rpx;
}
.title{
  width: 100%;
  height: 5vh;
  border-bottom: 1px dashed #bfbfbf;
  margin-bottom: 20rpx;
}
.content{
  width: 100%;
  height: 40vh;
}
.uni{
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.uni .course{
  border: 1px solid #000;
  border-radius: 15rpx;
  width: 240rpx;
  padding: 7rpx 20rpx;
}
.picker{
  display: inline-block;
  width: 270rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 1rpx solid #f60;
  border-radius: 15rpx;
  position: relative;
  padding: 0 40rpx 0 15rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  }
  .picker::after{
    content: "";
    /* height: 30rpx;
    width: 30rpx; */
    height: 0;
    width: 0;
    border-top: 15rpx solid #000;
    border-left: 15rpx solid #fff;
    border-right: 15rpx solid #fff;
    border-bottom: 15rpx solid #fff;
    background-color: #000;
    position: absolute;
    right: 20rpx;
    top:40%;
  }

.add{
  margin: 15rpx;
  box-sizing: border-box;
  border:1px dashed #bfbfbf;
  height: 200rpx;
  width: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.add image{
  width: 130rpx;
  height: 130rpx;
}
.publish{  
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 50rpx;
  width: 100%;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color:#fff;
  background-color: #ff9634;
  box-shadow: 0 0 15rpx 0 #d8d8d8,0 0 20rpx 0 #d8d8d8;
}