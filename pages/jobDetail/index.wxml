<view class="job-detail">
  <navBar 
    title-text="职位详情" 
    back-icon="/assets/icons/white/zuola.png"
    titleColor="#fff"/>
  <view class="head">
    <view style="display: flex;justify-content: space-between;margin-bottom: 35rpx;">
      <view class="role">{{jobDetail.role}}</view>
      <view class="salaryRange">{{jobDetail.salaryRange}}</view>
    </view>
    <view style="display: flex;justify-content: space-between;">
      <view style="display: flex;">
        <view class="tag">
          <image class="icon" src="/assets/icons/white/address.png"></image>{{jobDetail.location}}
        </view>
        <view class="tag">
          <image class="icon" src="/assets/icons/white/history.png"></image>{{jobDetail.type}}
        </view>
        <view class="tag_degree">
          <image class="icon" src="/assets/icons/white/degree.png"></image><text class="text">{{jobDetail.eduReq}}</text>
        </view>
      </view>
      <view class="{{favedByCurUser?'collect active':'collect'}}" bindtap="handleCollect">
        <image class="icon" src="/assets/icons/white/collect.png"></image>
      </view>
    </view>
  </view>
  <view class="body">
    <view class="title">职位详情</view>
    <view class="content">
      <!-- <view class="line" wx:for="{{jobDetail.detail}}" wx:key="index">{{item}}</view> -->
      <text class="desc">{{jobDetail.desc}}</text>
    </view>
    <view class="company">
      <image class="logo" mode="widthFix" src="https://api.reviewonclass.com/static/image/{{jobDetail.compLogo}}"></image>
      <view>
        <view class="companyName">{{jobDetail.companyName}}</view>
        <view class="description">{{jobDetail.companyDescription}} - {{jobDetail.staffSize}}</view>
      </view>
    </view>
  </view>

</view>