.job-detail{
  width: 100vw;
  height: 100vh;
  /* background: url(https://s4.ax1x.com/2021/12/06/oyeQWF.png) no-repeat;
  background-size: contain; */
}
.head{
  padding: 30rpx 30rpx 0 30rpx;
  padding-bottom: 20rpx;
  background-color: #8d64fd;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}
.head .role{
  color: #fff;
  font-weight: 500;
  font-size: 35rpx;
}
.head .salaryRange{
  font-weight: 500;
  color: rgb(252, 128, 27);
}
.head .tag{
  color: #fff;
  margin-right: 40rpx;
  display: flex;
  align-items: center;
  font-size: 25rpx;
}
