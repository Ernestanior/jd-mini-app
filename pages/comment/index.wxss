/* pages/comment/index.wxss */.bg{
  width: 100vw;
  overflow: hidden;
  background-color: #d8e4f0;
  min-height:100vh;
  /* background-color: #9cff95; */
}
.course-title{
  text-align: center;
  line-height: 8vh;
  font-size: 38rpx;
  font-weight: 700;
  color: #3d6cac;
}
.first-box,.second-box{
  width: 90vw;
  background-color: #f6f0e8;
  /* position: absolute;
  left: 50%; */
  margin: 20px auto;
  border-radius: 3vw;
  box-shadow: 5rpx 5rpx 10rpx #a2befa;
  padding:2vh 5vw;
  box-sizing: border-box;
  font-size: 30rpx;
  position: relative;
  overflow: hidden;

}
.first-box::before,.second-box::before{
  content: '';
  width: 2vw;
  height: 100%;
  background-color: #3d6cac;
  position:absolute;
  left: 0;
  top: 0;
}
.first-box .target{
  display: flex;
  font-weight: 600;
  align-items: center;
}
.first-box .target input{
  width: 45vw;
  margin-left: 20rpx;
  background-color: #fff;
  border-radius: 1vw;
  font-weight: 300;
  border: 1rpx dashed #a2befa;
  padding: .3vw 2vw;
}
